<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${package.Mapper}.${table.mapperName}">

#if(${enableCache})
    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

#end
#if(${baseResultMap})
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="${package.Entity}.${entity}">
#foreach($field in ${table.commonFields})
#if(${field.keyFlag})##生成主键排在第一位
        <id column="${field.name}" property="${field.propertyName}" />
#end
#end
#foreach($field in ${table.fields})
#if(!${field.keyFlag})##生成普通字段
        <result column="${field.name}" property="${field.propertyName}" />
#end
#end
#foreach($field in ${table.commonFields})##生成公共字段
    #if(!${field.keyFlag})
        #if(${field.name.equals("is_deleted")})##生成主键排在第一位
        <result column="${field.name}" property="deleted" />
        #else
        <result column="${field.name}" property="${field.propertyName}" />
        #end
    #end
#end
    </resultMap>

#end

#if(${baseColumnList})
    #set($csize = ${table.commonFields.size()} - 1)
    #set($lastCommon = ${table.commonFields[$csize]})
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
    #foreach($field in ${table.commonFields})
        #if(${field.keyFlag})
        ${field.name},
        #end
    #end
    #foreach($field in ${table.fields})
        ${field.name},
    #end
    #foreach($field in ${table.commonFields})
        #if(!${field.keyFlag} && $lastCommon.name != ${field.name})
        ${field.name},
        #elseif(!${field.keyFlag} && $lastCommon.name == ${field.name})
        ${field.name}
        #end
    #end
    </sql>

    <!-- 通用查询条件 -->
    <sql id="SEARCH_WHERE">
        is_deleted = 0
        #foreach($field in ${table.fields})
            #if(${field.columnType} == "STRING")
        <if test="${field.propertyName} != null and ${field.propertyName} != ''">
            AND ${field.name} LIKE CONCAT('%',#{${field.propertyName}},'%')
        </if>
            #else
        <if test="${field.propertyName} != null">
            AND ${field.name} = #{${field.propertyName}}
        </if>
            #end
        #end
    </sql>

    <!-- 批量插入-->
    <insert id="insertBatch">
        INSERT INTO
        ${table.name}
        (
        <include refid="Base_Column_List" />
        )
        VALUES
        <foreach collection="list" item= "item" index ="index" separator=",">
        (
        #foreach($field in ${table.commonFields})
        #if(${field.keyFlag})
            #{item.${field.propertyName} },
        #end
        #end
        #foreach($field in ${table.fields})
            #{item.${field.propertyName} },
        #end
        #foreach($field in ${table.commonFields})
        #if(${field.name.equals("is_deleted")})
            #{item.deleted},
        #elseif(!${field.keyFlag} && $lastCommon.name != ${field.name})
            #{item.${field.propertyName} },
        #elseif(!${field.keyFlag} && $lastCommon.name == ${field.name})
            #{item.${field.propertyName}}
        #end
        #end
        )
        </foreach >
    </insert>

    <!-- 批量修改-->
    <update id="updateBatch">
        update ${table.name}
        <trim prefix="set" suffixOverrides=",">
        #foreach($field in ${table.fields})
            <trim prefix="${field.name} =case" suffix="end,">
                <foreach collection="list" item="item" index="index">
                    <if test="item.${field.propertyName} != null">
                        when id=#{item.id}
                        then #{item.${field.propertyName}}
                    </if>
                </foreach>
            </trim>
        #end
        #foreach($field in ${table.commonFields})
        #if(!${field.keyFlag} and !${field.name.equals("is_deleted")})
            <trim prefix="${field.name} =case" suffix="end,">
                <foreach collection="list" item="item" index="index">
                    <if test="item.${field.propertyName} != null">
                        when id=#{item.id}
                        then #{item.${field.propertyName}}
                    </if>
                </foreach>
            </trim>
        #end
        #end
        </trim>
        where id in
        <foreach collection="list" item="item" index="index" separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>
#end
</mapper>
